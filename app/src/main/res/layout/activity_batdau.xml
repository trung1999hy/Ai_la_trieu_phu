<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/laivansam"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="trogiup"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/help5050"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:onClick="onclicktrogiup"
                android:src="@drawable/trogiup_5050" />

            <ImageView
                android:id="@+id/helpkhangia"
                android:layout_width="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
                android:onClick="onclicktrogiup"
                android:src="@drawable/khangia" />

            <ImageView
                android:id="@+id/helpcall"
                android:layout_width="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
                android:onClick="onclicktrogiup"
                android:src="@drawable/call" />

            <ImageView
                android:id="@+id/dungcuocchoi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onclicktrogiup"
                android:src="@drawable/dungcuocchoi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView

                    android:id="@+id/imClock"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/time2" />

                <TextView
                    android:id="@+id/tv_thoigian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="03:00"
                    android:textColor="#FFC107"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/tien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="40dp"
                    android:text="0"
                    android:textColor="#fff62a"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/khungcauhoi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSoCauhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text=""
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txt_cauhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/cauA"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClick"

                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/cauB"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClick"

                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/cauC"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClick"

                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/cauD"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClick"

                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>